# --- architecture ---
if(WIN32)
  set(SEGMENTATION_OPERATING_SYSTEM "win")
elseif(UNIX)
  set(SEGMENTATION_OPERATING_SYSTEM "linux")
else()
  message(FATAL_ERROR "Unknown operating system")
endif()

if(CMAKE_SIZEOF_VOID_P EQUAL "4")
  set(SEGMENTATION_CPU_BITNESS "32")
elseif(CMAKE_SIZEOF_VOID_P EQUAL "8")
  set(SEGMENTATION_CPU_BITNESS "64")
else()
  message(FATAL_ERROR "Unsupported CPU bitness")
endif()

set(SEGMENTATION_ARCH ${SEGMENTATION_OPERATING_SYSTEM}${SEGMENTATION_CPU_BITNESS})
set(SEGMENTATION_ARCH_32 ${SEGMENTATION_OPERATING_SYSTEM}32)
set(SEGMENTATION_ARCH_64 ${SEGMENTATION_OPERATING_SYSTEM}64)
message(STATUS "SEGMENTATION architecture: ${SEGMENTATION_ARCH}")
